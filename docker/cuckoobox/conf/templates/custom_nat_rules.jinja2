*mangle
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
# DHCP packets sent to VMs have no checksum (due to a longstanding bug).
-A POSTROUTING -o {{ virt_bridge_name }} -p udp -m udp --dport 68 -j CHECKSUM --checksum-fill
COMMIT

*nat
:PREROUTING ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
# Do not masquerade to these reserved address blocks.
-A POSTROUTING -s {{ virt_bridge_cidr }} -d 224.0.0.0/24 -j RETURN
-A POSTROUTING -s {{ virt_bridge_cidr }} -d 255.255.255.255/32 -j RETURN
# Route to the inetsim appliance:
-A PREROUTING -i {{ virt_bridge_name }} -d {{ virt_inetsim_addr }} -j DNAT --to-destination {{ inetsim_addr }}
#-A PREROUTING -i {{ virt_bridge_name }} ! -d {{ virt_bridge_cidr }} -j DNAT --to-destination {{ inetsim_addr }}
# Masquerade connections to the inetim appliance
-A POSTROUTING -o eth0 -j MASQUERADE
COMMIT

*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
# Allow basic INPUT traffic.
-A INPUT -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -p icmp --icmp-type 8 -m conntrack --ctstate NEW -j ACCEPT
# Accept SSH connections.
-A INPUT -p tcp -m tcp --syn -m conntrack --ctstate NEW --dport 22 -j ACCEPT
-A INPUT -p tcp -m tcp --syn -m conntrack --ctstate NEW --dport 8090 -j ACCEPT
# Accept DNS (port 53) and DHCP (port 67) packets from VMs.
#-A INPUT -i {{ virt_bridge_name }} -p udp -m udp -m multiport --dports 53,67 -j ACCEPT
#-A INPUT -i {{ virt_bridge_name }} -p tcp -m tcp -m multiport --dports 53,67 -j ACCEPT
# Accept incoming virtual network traffic, port unreachable will occur for everything
# not destined for the inetsim appliance
-A INPUT -i {{ virt_bridge_name }} -j ACCEPT
# Reject everything else.
-A INPUT -m conntrack --ctstate INVALID -j DROP
-A INPUT -p tcp -m tcp -j REJECT --reject-with tcp-reset
-A INPUT -j REJECT --reject-with icmp-port-unreachable
# Allow established traffic to the private subnet.
-A FORWARD -d {{ virt_bridge_cidr }} -o {{ virt_bridge_name }} -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
# Allow outbound traffic from the private subnet to the inetsim appliance
-A FORWARD -d {{ inetsim_addr }} -j ACCEPT
# Allow traffic between virtual machines.
-A FORWARD -i {{ virt_bridge_name }} -o {{ virt_bridge_name }} -j ACCEPT
# Meh, currently we allow ALL traffic out from the virtual network, since there's a corresponding rule to
# route EVERYTHING to the inetsim box..
-A FORWARD -i {{ virt_bridge_name }} -j ACCEPT
# Reject everything else.
-A FORWARD -i {{ virt_bridge_name }} -j REJECT --reject-with icmp-port-unreachable
-A FORWARD -o {{ virt_bridge_name }} -j REJECT --reject-with icmp-port-unreachable
COMMIT

