# This format is understood by iptables-restore. See `man iptables-restore`.

*mangle
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
# DHCP packets sent to VMs have no checksum (due to a longstanding bug).
{% for ctx in contexts %}
-A POSTROUTING -o {{ ctx.virt_bridge_name }} -p udp -m udp --dport 68 -j CHECKSUM --checksum-fill
{% endfor %}
COMMIT

*nat
:PREROUTING ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
# Route to the inetsim appliance:
{% for ins in inetsim %}
{% for ctx in contexts %}
-A PREROUTING -i {{ ctx.virt_bridge_name }} -d {{ eth_ip }} -p tcp -m tcp --sport 8000 -j RETURN
-A PREROUTING -i {{ ctx.virt_bridge_name }} -d {{ eth_ip }} -p tcp -m tcp --dport 2042 -j RETURN
{%  if ctx.route_opt == "inetsim" %}
-A PREROUTING -i {{ ctx.virt_bridge_name }} -j DNAT --to-destination {{ ins.ip }}
{% else %}
-A PREROUTING -i {{ ctx.virt_bridge_name }} ! -d {{ eth_ip }}/24 -j SNAT --from {{ eth_ip }}
{% endif %}
{% endfor %}
{% endfor %}
COMMIT

*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
# Allow basic INPUT traffic.
-A INPUT -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -p icmp --icmp-type 8 -m conntrack --ctstate NEW -j ACCEPT
-A INPUT -p tcp -m tcp --syn -m conntrack --ctstate NEW --dport 8090 -j ACCEPT
{% for ins in inetsim %}
-A FORWARD -d {{ ins.ip }} -j ACCEPT
-A FORWARD -s {{ ins.ip }} -j ACCEPT
{% endfor %}
{% for ctx in contexts %}
-A INPUT -i {{ ctx.virt_bridge_name }} ! -s {{ ctx.virt_bridge_ip }} -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 0.0.0.0/8 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 10.0.0.0/8 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 100.64.0.0/10 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 127.0.0.0/8 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 169.254.0.0/16 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 172.16.0.0/12 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 192.0.0.0/24 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 192.0.2.0/24 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 192.88.99.0/24 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 192.168.0.0/16 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 198.18.0.0/15 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 198.51.100.0/24 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 203.0.113.0/24 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 224.0.0.0/4 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 240.0.0.0/4 -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -d 255.255.255.255/32  -j DROP
-A INPUT -i {{ ctx.virt_bridge_name }} -j ACCEPT
# Allow traffic between virtual machines.
-A FORWARD -i {{ ctx.virt_bridge_name }} -o {{ ctx.virt_bridge_name }} -j ACCEPT
-A FORWARD -d {{ ctx.virt_route_addr }} -o {{ ctx.virt_bridge_name }} -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A FORWARD -i {{ ctx.virt_bridge_name }} -j ACCEPT
-A FORWARD -o {{ ctx.virt_bridge_name }} -j REJECT --reject-with icmp-port-unreachable
{% endfor %}
# Reject everything else.
-A INPUT -m conntrack --ctstate INVALID -j DROP
-A INPUT -p tcp -m tcp -j REJECT --reject-with tcp-reset
-A INPUT -j REJECT
COMMIT
