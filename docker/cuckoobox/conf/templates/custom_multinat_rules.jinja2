# This format is understood by iptables-restore. See `man iptables-restore`.

*mangle
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
# DHCP packets sent to VMs have no checksum (due to a longstanding bug).
{% for context in contexts %}
-A POSTROUTING -o {{ context.virt_bridge_name }} -p udp -m udp --dport 68 -j CHECKSUM --checksum-fill
{% endfor %}
COMMIT

*nat
:PREROUTING ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
{% for context in contexts %}
-A POSTROUTING -s {{ context.virt_bridge_cidr }} -d 224.0.0.0/24 -j RETURN
-A POSTROUTING -s {{ context.virt_bridge_cidr }} -d 255.255.255.255/32 -j RETURN
-A PREROUTING -i {{ context.virt_bridge_name }} -d {{ context.virt_inetsim_addr }} -j DNAT --to-destination {{ context.inetsim_addr }}
#-A PREROUTING -i {{ context.virt_bridge_name }} ! -d {{ context.virt_bridge_cidr }} -j DNAT --to-destination {{ context.inetsim_addr }}
{% endfor %}
# Masquerade connections to the inetim appliance
-A POSTROUTING -o eth0 -j MASQUERADE
COMMIT

*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
# Allow basic INPUT traffic.
-A INPUT -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -p icmp --icmp-type 8 -m conntrack --ctstate NEW -j ACCEPT
-A INPUT -p tcp -m tcp --syn -m conntrack --ctstate NEW --dport 8090 -j ACCEPT
# Accept incoming virtual network traffic
{% for context in contexts %}
-A INPUT -i {{ context.virt_bridge_name }} -j ACCEPT
# Reject everything else.
-A INPUT -m conntrack --ctstate INVALID -j DROP
-A INPUT -p tcp -m tcp -j REJECT --reject-with tcp-reset
-A INPUT -j REJECT --reject-with icmp-port-unreachable
# Allow established traffic to the private subnet.
-A FORWARD -d {{ context.virt_bridge_cidr }} -o {{ context.virt_bridge_name }} -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A FORWARD -d {{ context.inetsim_addr }} -j ACCEPT
-A FORWARD -i {{ context.virt_bridge_name }} -o {{ context.virt_bridge_name }} -j ACCEPT
-A FORWARD -i {{ context.virt_bridge_name }} -d  -j REJECT --reject-with icmp-port-unreachable
-A FORWARD -i {{ context.virt_bridge_name }} -j ACCEPT
-A FORWARD -i {{ context.virt_bridge_name }} -j REJECT --reject-with icmp-port-unreachable
-A FORWARD -o {{ context.virt_bridge_name }} -j REJECT --reject-with icmp-port-unreachable
{% endfor %}
COMMIT


