{% for context in contexts %}
auto {{ context.virt_bridge_name }}
iface {{ context.virt_bridge_name }} inet static
    bridge_ports {{ context.dummy_iface_name }}
    bridge_stp on
    bridge_fd 2
    address {{ context.virt_bridge_ip }}
    netmask {{ context.virt_bridge_netmask }}

{% endfor %}

{% for ins_meta in inetsim %}
auto {{ ins_meta.iface_name }} dummy
iface {{ ins_meta.iface_name }} inet static
    address {{ ins_meta.ip }}
    netmask {{ ins_meta.netmask }}
{% endfor %}